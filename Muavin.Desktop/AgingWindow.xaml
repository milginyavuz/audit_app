<Window x:Class="Muavin.Desktop.AgingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cari Hesap Yaşlandırma"
        Height="800" Width="1400">

    <!-- ✅ TÜM SAYILAR İÇİN TEK NOKTADAN TR FORMAT (₺ YOK) -->
    <Window.Resources>

        <!-- Numeric hücreleri sağa hizala -->
        <Style x:Key="RightCell" TargetType="DataGridCell">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
        </Style>

        <!-- Numeric text formatı: 146.893,82 (tr-TR culture ile) -->
        <Style x:Key="TrNumberText" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,6,0"/>
        </Style>

    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Filtreler + Yaşlandır + Excel'e Aktar -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
            <TextBlock Text="Kebir:" VerticalAlignment="Center"/>
            <TextBox Width="60" Margin="4,0"
                     Text="{Binding KebirBas, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="-" VerticalAlignment="Center"/>
            <TextBox Width="60" Margin="4,0"
                     Text="{Binding KebirBit, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Hesap Kodu:" Margin="16,0,4,0" VerticalAlignment="Center"/>
            <TextBox Width="120"
                     Text="{Binding HesapKodu, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Yaşlandırma Tarihi:" Margin="16,0,4,0" VerticalAlignment="Center"/>
            <DatePicker SelectedDate="{Binding AgingDate}" Width="130"/>

            <Button Content="Yaşlandır" Margin="16,0,0,0" Width="100"
                    Command="{Binding AgeCommand}"/>

            <Button Content="Excel'e Aktar" Margin="8,0,0,0" Width="110"
                    Click="BtnExportExcel_Click"/>
        </StackPanel>

        <!-- Özet başlık -->
        <TextBlock Grid.Row="1" Margin="0,4,0,2"
                   Text="Yaşlandırma Özeti"
                   FontWeight="Bold"/>

        <!-- Yaşlandırma özeti -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding ReportRows}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Hesap Kodu" Binding="{Binding HesapKodu}" Width="90"/>
                <DataGridTextColumn Header="Hesap Adı" Binding="{Binding HesapAdi}" Width="220"/>

                <!-- ✅ Numeric kolonlar: sağ hizalama + N2 -->
                <DataGridTextColumn Header="0-30 gün" Binding="{Binding Gun_0_30, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="31-60 gün" Binding="{Binding Gun_31_60, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="61-90 gün" Binding="{Binding Gun_61_90, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="91-120 gün" Binding="{Binding Gun_91_120, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="121-150 gün" Binding="{Binding Gun_121_150, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="151-180 gün" Binding="{Binding Gun_151_180, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="181-210 gün" Binding="{Binding Gun_181_210, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="211-240 gün" Binding="{Binding Gun_211_240, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="241-270 gün" Binding="{Binding Gun_241_270, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="271-300 gün" Binding="{Binding Gun_271_300, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="301-330 gün" Binding="{Binding Gun_301_330, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="331-365 gün" Binding="{Binding Gun_331_365, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>

                <DataGridTextColumn Header="Açılış" Binding="{Binding Gun_Acilis, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>
                <DataGridTextColumn Header="&gt;365 gün" Binding="{Binding Gun_365Ustu, StringFormat={}{0:N2}}" Width="90" CellStyle="{StaticResource RightCell}"/>

                <DataGridTextColumn Header="Bakiye"
                                    Binding="{Binding Bakiye, StringFormat={}{0:N2}}"
                                    Width="110"
                                    CellStyle="{StaticResource RightCell}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Detay başlık -->
        <TextBlock Grid.Row="3" Margin="0,8,0,2"
                   Text="Yaşlandırılan Hesap Hareketleri (Detay)"
                   FontWeight="Bold"/>

        <!-- Detay hareketler -->
        <DataGrid Grid.Row="4"
                  ItemsSource="{Binding DetailRows}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Hesap Kodu" Binding="{Binding HesapKodu}" Width="90"/>
                <DataGridTextColumn Header="Hesap Adı" Binding="{Binding HesapAdi}" Width="250"/>
                <DataGridTextColumn Header="Tarih"
                                    Binding="{Binding PostingDate, StringFormat=d}"
                                    Width="90"/>

                <DataGridTextColumn Header="Borç"
                                    Binding="{Binding Borc, StringFormat={}{0:N2}}"
                                    Width="100"
                                    CellStyle="{StaticResource RightCell}"/>

                <DataGridTextColumn Header="Alacak"
                                    Binding="{Binding Alacak, StringFormat={}{0:N2}}"
                                    Width="100"
                                    CellStyle="{StaticResource RightCell}"/>

                <DataGridTextColumn Header="Bakiye"
                                    Binding="{Binding Bakiye, StringFormat={}{0:N2}}"
                                    Width="120"
                                    CellStyle="{StaticResource RightCell}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
