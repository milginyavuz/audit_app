<!-- Muavin.Desktop/MainWindow.xaml -->
<Window x:Class="Muavin.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Muavin.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="e-Defter XML → Muavin"
        Width="1602" Height="1008"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel>

        <!-- ÜST ŞERİT -->
        <Border DockPanel.Dock="Top" Padding="8"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Height="100">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Dosya/klasör seç -->
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <Button Content="Dosya / Klasör Seç…" Padding="14,6"
                            Command="{Binding PickCommand}"/>
                </StackPanel>

                <!-- Filtreler (Açıklama alanı KALDIRILDI) -->
                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">

                    <!-- Kebir aralığı -->
                    <TextBlock Text="Kebir:" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBox Width="70" HorizontalContentAlignment="Center"
                             ToolTip="Başlangıç (örn: 100)"
                             Text="{Binding Filters.KebirBas, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="–" Margin="4,0" VerticalAlignment="Center"/>
                    <TextBox Width="70" HorizontalContentAlignment="Center"
                             ToolTip="Bitiş (örn: 799)"
                             Text="{Binding Filters.KebirBit, UpdateSourceTrigger=PropertyChanged}"/>

                    <Separator Margin="12,0"/>

                    <!-- Tarih aralığı -->
                    <TextBlock Text="Tarih:" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <DatePicker Width="140" SelectedDate="{Binding Filters.TarihBas}"/>
                    <TextBlock Text="–" Margin="4,0" VerticalAlignment="Center"/>
                    <DatePicker Width="140" SelectedDate="{Binding Filters.TarihBit}"/>

                    <Separator Margin="12,0"/>

                    <!-- Hesap kodu çoklu arama -->
                    <TextBlock Text="Hesap Kodu:" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBox Width="260"
                             ToolTip="Virgülle çoklu kod (örn: 100-001-0001,320-001-0001)"
                             Text="{Binding Filters.HesapKodu, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Content="Ara" Margin="12,0,0,0" Padding="14,6"
                            Command="{Binding ApplyFiltersCommand}"/>

                    <Button Content="Temizle" Margin="6,0,0,0" Padding="14,6"
                            Command="{Binding ClearAllCommand}"/>
                </StackPanel>

                <!-- Sağdaki 2 buton -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Hesap Özeti" Padding="14,6"
                            Command="{Binding OpenAccountSummaryCommand}"/>
                </StackPanel>

                <StackPanel Grid.Column="6" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Excel’e Aktar" Padding="14,6"
                            Command="{Binding ExportExcelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- TABLO -->
        <DataGrid x:Name="RowsGrid"
                  ItemsSource="{Binding Rows}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  EnableRowVirtualization="True"
                  SelectionMode="Single"
                  MouseDoubleClick="RowsGrid_MouseDoubleClick"
                  Margin="8"
                  ColumnHeaderHeight="28"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  GridLinesVisibility="Horizontal"
                  RowHeaderWidth="0" Height="895" Width="1586" RenderTransformOrigin="0.515,0.516" SelectionChanged="RowsGrid_SelectionChanged">
            <DataGrid.Resources>
                <!-- Sayısal hücreler sağa hizalansın -->
                <Style x:Key="RightAlign" TargetType="TextBlock">
                    <Setter Property="TextAlignment" Value="Right"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Kayıt No"
                                    Binding="{Binding EntryCounter}"
                                    Width="70"/>

                <DataGridTextColumn Header="Kebir"
                                    Binding="{Binding Kebir}"
                                    SortMemberPath="Kebir"
                                    Width="60"/>

                <DataGridTextColumn Header="Hesap Kodu"
                                    Binding="{Binding HesapKodu}"
                                    SortMemberPath="HesapKodu"
                                    Width="160"/>

                <DataGridTextColumn Header="Hesap Adı"
                                    Binding="{Binding HesapAdi}"
                                    SortMemberPath="HesapAdi"
                                    Width="220"/>

                <DataGridTextColumn Header="Fiş Tarihi"
                                    Binding="{Binding PostingDate, StringFormat=\{0:dd.MM.yyyy\}}"
                                    SortMemberPath="PostingDate"
                                    Width="110"/>

                <DataGridTextColumn Header="Fiş Numarası"
                                    Binding="{Binding EntryNumber}"
                                    SortMemberPath="EntryNumber"
                                    Width="110"/>

                <DataGridTextColumn Header="Fiş Türü"
                                    Binding="{Binding FisTuru}"
                                    Width="100"/>

                <!-- İsteniyor: Açıklama kolonu veri tablosunda kalsın -->
                <DataGridTextColumn Header="Açıklama"
                                    Binding="{Binding Aciklama}"
                                    SortMemberPath="Aciklama"
                                    Width="*"/>

                <DataGridTextColumn Header="Borç"
                                    Binding="{Binding Borc, StringFormat=N2}"
                                    ElementStyle="{StaticResource RightAlign}"
                                    Width="110"/>

                <DataGridTextColumn Header="Alacak"
                                    Binding="{Binding Alacak, StringFormat=N2}"
                                    ElementStyle="{StaticResource RightAlign}"
                                    Width="110"/>

                <DataGridTextColumn Header="Tutar"
                                    Binding="{Binding Tutar, StringFormat=N2}"
                                    ElementStyle="{StaticResource RightAlign}"
                                    Width="110"/>

                <DataGridTextColumn Header="Bakiye"
                                    Binding="{Binding Bakiye, StringFormat=N2}"
                                    ElementStyle="{StaticResource RightAlign}"
                                    Width="110"/>

                <DataGridTextColumn Header="Karşı Hesap"
                                    Binding="{Binding KarsiHesap}"
                                    Width="220"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ALT BAR: Sol toplamlar, sağ altta satır sayısı -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding TotalsText}"/>
            </StatusBarItem>

            <!-- sağa itmek için genişleyen boşluk -->
            <StatusBarItem>
                <Separator Width="20"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- boş sol -->
                    <TextBlock Grid.Column="0"/>

                    <!-- sağ altta toplam satır -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding Rows.Count, StringFormat=Tamamlandı — {0} satır}"
                               FontWeight="SemiBold"/>
                </Grid>
            </StatusBarItem>
        </StatusBar>

    </DockPanel>
</Window>
