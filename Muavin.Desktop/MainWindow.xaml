<Window x:Class="Muavin.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ANIL"
        Width="1602" Height="1008"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <!-- Resources -->
        <DockPanel.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <!-- Daha modern ve %40 daha küçük buton/alan ölçüleri -->
            <Style TargetType="Button">
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="MinHeight" Value="24"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="6,0,0,0"/>
            </Style>

            <Style TargetType="ToggleButton">
                <Setter Property="Padding" Value="9,5"/>
                <Setter Property="MinHeight" Value="24"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="6,0,0,0"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="MinHeight" Value="24"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="6,0,0,0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style TargetType="DatePicker">
                <Setter Property="MinHeight" Value="24"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="6,0,0,0"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
        </DockPanel.Resources>

        <!-- ===================== TOP BAR (2 rows) ===================== -->
        <Border DockPanel.Dock="Top"
                Padding="10"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Aksiyonlar + Sağda Excel -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sol aksiyonlar + Hesap/Yaşlandırma/Mizan butonları -->
                    <WrapPanel Grid.Column="0" VerticalAlignment="Center">
                        <Button Content="Bağlam Değiştir…"
                                Margin="0,0,0,0"
                                ToolTip="Şirket ve dönem bağlamını değiştirir"
                                Command="{Binding ChangeContextCommand}" />

                        <Button Content="Veritabanına Veri Ekle"
                                ToolTip="Seçili dosyalardan veriyi veritabanına aktarır"
                                Command="{Binding ImportToDatabaseCommand}" />

                        <Button Content="Yüklemeyi Geri Al"
                                ToolTip="{Binding UndoLastImportToolTip}"
                                Command="{Binding UndoLastImportCommand}"/>

                        <Separator Margin="10,0"/>

                        <Button Content="Hesap Özeti"
                                ToolTip="Seçili hesap için özet ekranını açar"
                                Command="{Binding OpenAccountSummaryCommand}"/>

                        <Button Content="Yaşlandırma"
                                ToolTip="Cari hesap yaşlandırma ekranını açar"
                                Command="{Binding OpenAgingCommand}"/>

                        <Button Content="Mizan"
                                ToolTip="Çalışma mizanı ekranını açar"
                                Click="MizanButton_Click"/>

                        <TextBlock Text="İpucu: Fiş Numarası'na tıklayınca aynı fiş hareketleri filtrelenir."
                                   Margin="14,0,0,0"
                                   Opacity="0.75"/>
                    </WrapPanel>

                    <!-- Sağ: Excel -->
                    <WrapPanel Grid.Column="1" VerticalAlignment="Center">
                        <Button Content="Panoya Kopyala"
                                ToolTip="Seçili satırları panoya kopyalar (Excel’e yapıştırabilirsiniz)."
                                Margin="0,0,6,0"
                                Click="CopySelectedRows_Click"/>
                        <Button Content="Excel’e Aktar"
                                ToolTip="Ekranda gördüğünüz tabloyu Excel dosyasına aktarır ve açar"
                                Margin="0,0,0,0"
                                Click="ExportExcel_Click"/>
                    </WrapPanel>
                </Grid>

                <!-- Row 2: Filtre Bar -->
                <Border Grid.Row="2"
                        Padding="8"
                        CornerRadius="6"
                        Background="#10FFFFFF"
                        BorderBrush="#22000000"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- ✅ SOL + SAĞ AYRIMI -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- SOL: filtre girişleri -->
                            <WrapPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Kebir:" Margin="0,0,0,0"/>
                                <TextBox Width="42"
                                         HorizontalContentAlignment="Center"
                                         ToolTip="Başlangıç Kebir (örn: 100)"
                                         Text="{Binding Filters.KebirBas, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="–" Margin="6,0,0,0"/>
                                <TextBox Width="42"
                                         HorizontalContentAlignment="Center"
                                         ToolTip="Bitiş Kebir (örn: 799)"
                                         Text="{Binding Filters.KebirBit, UpdateSourceTrigger=PropertyChanged}"/>

                                <Separator Margin="10,0"/>

                                <TextBlock Text="Tarih:"/>
                                <DatePicker Width="125"
                                            ToolTip="Başlangıç tarihi"
                                            SelectedDate="{Binding Filters.TarihBas}"
                                            SelectedDateFormat="Short"/>

                                <TextBlock Text="–" Margin="6,0,0,0"/>

                                <DatePicker Width="125"
                                            ToolTip="Bitiş tarihi"
                                            SelectedDate="{Binding Filters.TarihBit}"
                                            SelectedDateFormat="Short"/>

                                <Separator Margin="10,0"/>

                                <TextBlock Text="Hesap Kodu:"/>
                                <TextBox Width="160"
                                         ToolTip="Virgülle çoklu kod (örn: 100-001-0001,320-001-0001)"
                                         Text="{Binding Filters.HesapKodu, UpdateSourceTrigger=PropertyChanged}"/>

                                <!-- ✅ Açıklama ara -->
                                <TextBlock Text="Açıklama:" Margin="10,0,0,0"/>
                                <TextBox Width="220"
                                         ToolTip="Açıklama içinde kelime arar (büyük/küçük harf duyarsız)"
                                         Text="{Binding Filters.Aciklama, UpdateSourceTrigger=PropertyChanged}"/>

                                <Button Content="Ara"
                                        ToolTip="Filtreleri uygular"
                                        Command="{Binding ApplyFiltersCommand}"/>
                            </WrapPanel>

                            <!-- SAĞ: butonlar (Panoya Kopyala burada) -->
                            <WrapPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <Button Content="Filtreleri Sıfırla"
                                        ToolTip="Kebir, tarih, hesap kodu ve açıklama filtrelerini sıfırlar"
                                        Command="{Binding ResetFiltersCommand}"/>

                                <ToggleButton Content="Açılış Hariç"
                                              Width="105"
                                              ToolTip="Açılış fişi hareketlerini listeden hariç tutar"
                                              IsChecked="{Binding Filters.ExcludeAcilis, Mode=TwoWay}" />

                                <ToggleButton Content="Kapanış Hariç"
                                              Width="105"
                                              ToolTip="Kapanış fişi hareketlerini listeden hariç tutar"
                                              IsChecked="{Binding Filters.ExcludeKapanis, Mode=TwoWay}" />

                                <Button Content="Fiş Odağını Kapat"
                                        ToolTip="Fiş numarasına göre yapılan filtrelemeyi kaldırır"
                                        Visibility="{Binding IsFisFocusActive, Converter={StaticResource BoolToVis}}"
                                        Command="{Binding ClearFisFocusCommand}"/>

                                <Button Content="Ekranı Boşalt"
                                        ToolTip="Ekrandaki tüm satırları kaldırır (veritabanını etkilemez). Geri yüklemek için 'Veriyi Yeniden Yükle' kullanın."
                                        Command="{Binding ClearAllCommand}"/>
                            </WrapPanel>
                        </Grid>

                        <Border Grid.Column="1" Width="0"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ALT BAR -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Toplam Borç: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Totals.Borc, StringFormat={}{0:N2}}" Margin="4,0,12,0"/>
                    <TextBlock Text="Toplam Alacak: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Totals.Alacak,StringFormat={}{0:N2}}" Margin="4,0,0,0"/>
                </StackPanel>
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding Rows.Count, StringFormat=Tamamlandı — {0} satır}"
                           FontWeight="SemiBold"/>
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding FisFocusBadgeText}"
                           FontWeight="SemiBold"
                           Visibility="{Binding IsFisFocusActive, Converter={StaticResource BoolToVis}}"
                           Margin="0,0,12,0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding UiStatusMessage}"
                           Opacity="0.85"
                           Margin="0,0,8,0"/>
            </StatusBarItem>
        </StatusBar>

        <!-- TABLO -->
        <DataGrid x:Name="RowsGrid"
                  ItemsSource="{Binding Rows}"
                  SelectedItem="{Binding SelectedRow, Mode=TwoWay}"
                  IsReadOnly="False"
                  BeginningEdit="RowsGrid_BeginningEdit"
                  AutoGenerateColumns="False"
                  EnableRowVirtualization="True"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  ClipboardCopyMode="None"
                  MouseDoubleClick="RowsGrid_MouseDoubleClick"
                  Margin="8"
                  ColumnHeaderHeight="28"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  GridLinesVisibility="Horizontal"
                  RowHeaderWidth="0"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  SelectionChanged="RowsGrid_SelectionChanged"
                  PreviewKeyDown="RowsGrid_PreviewKeyDown"
                  PreviewMouseLeftButtonDown="RowsGrid_PreviewMouseLeftButtonDown"
                  ContextMenuOpening="RowsGrid_ContextMenuOpening">

            <DataGrid.ContextMenu>
                <ContextMenu>

                    <!-- ✅ HIZLI FİLTRE -->
                    <MenuItem x:Name="MiQuickFilterHeader"
                  Header="Hızlı Filtre"
                  IsEnabled="False"/>
                    <Separator/>

                    <MenuItem x:Name="MiQuickFilterRoot" Header="Filtrele">
                        <MenuItem Header="Sadece Bu Değer" Click="QuickFilter_Equals_Click"/>
                        <MenuItem Header="Bu Değer Hariç" Click="QuickFilter_NotEquals_Click"/>
                        <Separator/>
                        <MenuItem Header="Bu Değeri İçeren" Click="QuickFilter_Contains_Click"/>
                        <MenuItem Header="Bu Değeri İçermeyen" Click="QuickFilter_NotContains_Click"/>
                    </MenuItem>

                    <Separator/>

                    <!-- ✅ SENİN MEVCUT MENÜ -->
                    <MenuItem Header="{Binding ContextMenuFisHeader}" IsEnabled="False"/>
                    <Separator/>

                    <MenuItem Header="Seçili satırları kopyala (Ctrl+C)"
                  Click="CopySelectedRows_Click"/>
                    <Separator/>

                    <MenuItem Header="Fiş Türü">
                        <MenuItem Header="Normal"
                      Command="{Binding SetFisTuruForSelectedFisWithPromptCommand}"
                      CommandParameter="Normal"/>
                        <MenuItem Header="Açılış"
                      Command="{Binding SetFisTuruForSelectedFisWithPromptCommand}"
                      CommandParameter="Açılış"/>
                        <MenuItem Header="Kapanış"
                      Command="{Binding SetFisTuruForSelectedFisWithPromptCommand}"
                      CommandParameter="Kapanış"/>
                        <MenuItem Header="Gelir Tablosu Kapanış"
                      Command="{Binding SetFisTuruForSelectedFisWithPromptCommand}"
                      CommandParameter="Gelir Tablosu Kapanış"/>
                        <MenuItem Header="Yansıtma Kapama"
                      Command="{Binding SetFisTuruForSelectedFisWithPromptCommand}"
                      CommandParameter="Yansıtma Kapama"/>
                    </MenuItem>

                    <Separator/>

                    <MenuItem Header="Son değişikliği geri al"
                  Command="{Binding UndoLastFisTuruChangeCommand}"
                  IsEnabled="{Binding CanUndoFisTuruChange}"/>

                    <MenuItem Header="Değişiklikleri DB'ye kaydet"
                  Command="{Binding SaveFisTuruOverridesToDbCommand}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            
            <DataGrid.Resources>
                <Style x:Key="FisNoLinkText" TargetType="TextBlock">
                    <Setter Property="TextDecorations" Value="Underline"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="ToolTip" Value="Aynı fiş numarasına ait hareketleri görmek için tıklayın (tekrar tıkla: geri dön)."/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style x:Key="FisNoCellStyle" TargetType="DataGridCell">
                    <Setter Property="Padding" Value="6,2"/>
                    <Setter Property="ToolTip" Value="Aynı fiş numarasına ait hareketleri görmek için tıklayın (tekrar tıkla: geri dön)."/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFF3F6FF"/>
                        </Trigger>

                        <DataTrigger Binding="{Binding IsFocusedFis}" Value="True">
                            <Setter Property="Background" Value="#FFFFF2CC"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="PreviewMouseRightButtonDown"
                     Handler="RowsGridRow_PreviewMouseRightButtonDown"/>
                    <Style.Triggers>

                        <DataTrigger Binding="{Binding IsFisImbalanced}" Value="True">
                            <Setter Property="Background" Value="#FFFFE5E5"/>
                            <Setter Property="ToolTip"
                        Value="{Binding FisDiff, StringFormat=⚠ Dengesiz fiş! Borç-Alacak farkı: {0:N2}}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding DataContext.IsFisFocusActive, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                         Value="True">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Kayıt No" Binding="{Binding EntryCounter}" Width="70" SortMemberPath="EntryCounter" IsReadOnly="True"/>
                <DataGridTextColumn Header="Kebir" Binding="{Binding Kebir}" SortMemberPath="Kebir" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Hesap Kodu" Binding="{Binding HesapKodu}" SortMemberPath="HesapKodu" Width="160" IsReadOnly="True"/>
                <DataGridTextColumn Header="Hesap Adı" Binding="{Binding HesapAdi}" SortMemberPath="HesapAdi" Width="220" IsReadOnly="True"/>
                <DataGridTextColumn Header="Fiş Tarihi"
                                    Binding="{Binding PostingDate, StringFormat=\{0:dd.MM.yyyy\}}"
                                    SortMemberPath="PostingDate" Width="110" IsReadOnly="True"/>

                <DataGridTextColumn Header="Fiş Numarası"
                                    Binding="{Binding EntryNumber}"
                                    SortMemberPath="EntryNumber"
                                    Width="110"
                                    ElementStyle="{StaticResource FisNoLinkText}"
                                    CellStyle="{StaticResource FisNoCellStyle}"
                                    IsReadOnly="True"/>

                <!-- ✅ FİŞ TÜRÜ: ComboBox -->
                <DataGridTemplateColumn Header="Fiş Türü" Width="110" IsReadOnly="False" SortMemberPath="FisTuru">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FisTuru}" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox MinWidth="100"
                                      ItemsSource="{Binding DataContext.FisTuruOptions, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                      SelectedItem="{Binding FisTuru, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                      SelectionChanged="FisTuruCombo_SelectionChanged"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Açıklama" Binding="{Binding Aciklama}" SortMemberPath="Aciklama" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Borç" Binding="{Binding Borc, StringFormat={}{0:N2}}" Width="110" SortMemberPath="Borc" IsReadOnly="True"/>
                <DataGridTextColumn Header="Alacak" Binding="{Binding Alacak, StringFormat={}{0:N2}}" Width="110" SortMemberPath="Alacak" IsReadOnly="True"/>
                <DataGridTextColumn Header="Tutar" Binding="{Binding Tutar, StringFormat={}{0:N2}}" Width="110" SortMemberPath="Tutar" IsReadOnly="True"/>
                <DataGridTextColumn Header="Bakiye" Binding="{Binding RunningBalance, StringFormat={}{0:N2}}" Width="110" SortMemberPath="RunningBalance" IsReadOnly="True"/>
                <DataGridTextColumn Header="Karşı Hesap" Binding="{Binding KarsiHesap}" Width="220"  SortMemberPath="KarsiHesap" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
