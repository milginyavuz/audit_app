<Window x:Class="Muavin.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="e-Defter XML → Muavin"
        Width="1602" Height="1008"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <!-- ÜST ŞERİT -->
        <Border DockPanel.Dock="Top"
                Padding="8"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                Height="100">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Dosya/klasör seç + Bağlam/DB -->
                <StackPanel Orientation="Horizontal"
                            Grid.Column="0"
                            VerticalAlignment="Center">
                    <Button Content="Dosya / Klasör Seç…"
                            Padding="14,6"
                            Command="{Binding PickCommand}"/>

                    <Button Content="Bağlam Değiştir…"
                            Margin="6,0,0,0"
                            Padding="14,6"
                            Command="{Binding ChangeContextCommand}" />

                    <Button Content="Veritabanına Veri Ekle"
                            Margin="6,0,0,0"
                            Padding="14,6"
                            Command="{Binding ImportToDatabaseCommand}" />
                </StackPanel>

                <!-- Filtreler -->
                <StackPanel Orientation="Horizontal"
                            Grid.Column="2"
                            VerticalAlignment="Center">

                    <!-- Kebir aralığı -->
                    <TextBlock Text="Kebir:"
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                    <TextBox Width="70"
                             HorizontalContentAlignment="Center"
                             ToolTip="Başlangıç (örn: 100)"
                             Text="{Binding Filters.KebirBas, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="–"
                               Margin="4,0"
                               VerticalAlignment="Center"/>
                    <TextBox Width="70"
                             HorizontalContentAlignment="Center"
                             ToolTip="Bitiş (örn: 799)"
                             Text="{Binding Filters.KebirBit, UpdateSourceTrigger=PropertyChanged}"/>

                    <Separator Margin="12,0"/>

                    <!-- Tarih aralığı -->
                    <TextBlock Text="Tarih:"
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                    <DatePicker Width="140"
                                SelectedDate="{Binding Filters.TarihBas}"/>
                    <TextBlock Text="–"
                               Margin="4,0"
                               VerticalAlignment="Center"/>
                    <DatePicker Width="140"
                                SelectedDate="{Binding Filters.TarihBit}"/>

                    <Separator Margin="12,0"/>

                    <!-- Hesap kodu çoklu arama -->
                    <TextBlock Text="Hesap Kodu:"
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                    <TextBox Width="260"
                             ToolTip="Virgülle çoklu kod (örn: 100-001-0001,320-001-0001)"
                             Text="{Binding Filters.HesapKodu, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Content="Ara"
                            Margin="12,0,0,0"
                            Padding="14,6"
                            Command="{Binding ApplyFiltersCommand}"/>

                    <Button Content="Temizle"
                            Margin="6,0,0,0"
                            Padding="14,6"
                            Command="{Binding ClearAllCommand}"/>

                    <Button Content="Sıfırla"
                            Padding="14,6"
                            Command="{Binding ResetFiltersCommand}" />

                    <Separator Margin="12,0"/>

                    <ToggleButton Content="Açılış Hariç"
                                  Width="120"
                                  IsChecked="{Binding Filters.ExcludeAcilis, Mode=TwoWay}" />

                    <ToggleButton Content="Kapanış Hariç"
                                  Width="120"
                                  Margin="6,0,0,0"
                                  IsChecked="{Binding Filters.ExcludeKapanis, Mode=TwoWay}" />

                    <Button Content="Ara"
                            Margin="12,0,0,0"
                            Padding="14,6"
                            Command="{Binding ApplyFiltersCommand}"/>

                    <Button Content="Sıfırla"
                            Margin="6,0,0,0"
                            Padding="14,6"
                            Command="{Binding ResetFiltersCommand}" />
                </StackPanel>

                <!-- Sağdaki butonlar -->
                <StackPanel Grid.Column="4"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Button Content="Hesap Özeti"
                            Padding="14,6"
                            Command="{Binding OpenAccountSummaryCommand}"/>

                    <Button Content="Yaşlandırma"
                            Margin="6,0,0,0"
                            Padding="14,6"
                            Command="{Binding OpenAgingCommand}"/>

                    <Button Content="Mizan"
                            Width="90"
                            Margin="4,0,0,0"
                            Click="MizanButton_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="6"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Content="Excel’e Aktar"
                            Padding="14,6"
                            Click="ExportExcel_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ALT BAR -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Toplam Borç: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Totals.Borc, StringFormat={}{0:N2}}" Margin="4,0,12,0"/>
                    <TextBlock Text="Toplam Alacak: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Totals.Alacak,StringFormat={}{0:N2}}" Margin="4,0,0,0"/>
                </StackPanel>
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding Rows.Count, StringFormat=Tamamlandı — {0} satır}"
                           FontWeight="SemiBold"/>
            </StatusBarItem>
        </StatusBar>

        <!-- TABLO -->
        <DataGrid x:Name="RowsGrid"
                  ItemsSource="{Binding Rows}"
                  SelectedItem="{Binding SelectedRow, Mode=TwoWay}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  EnableRowVirtualization="True"
                  SelectionMode="Single"
                  MouseDoubleClick="RowsGrid_MouseDoubleClick"
                  Margin="8"
                  ColumnHeaderHeight="28"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  GridLinesVisibility="Horizontal"
                  RowHeaderWidth="0"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  SelectionChanged="RowsGrid_SelectionChanged">

            <!-- ✅ Sağ tıkla tıklanan satırı seç -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="PreviewMouseRightButtonDown"
                                 Handler="RowsGridRow_PreviewMouseRightButtonDown"/>
                </Style>
                
                
                
            </DataGrid.RowStyle>

            <DataGrid.ContextMenu>
                <!-- ✅ ContextMenu kendi visual-tree’ında olduğu için DataContext’i buradan bağlamak şart -->
                <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">

                    <!-- ✅ Dinamik bilgi satırı (tıklanınca işlem yapmaz) -->
                    <MenuItem Header="{Binding ContextMenuFisHeader}"
                  IsEnabled="False"/>

                    <Separator/>

                    <MenuItem Header="Fiş Türü">
                        <!-- ✅ Kullanıcı dostu isim: Normal yerine -->
                        <MenuItem Header="Varsayılana Dön (Override’ı Kaldır)"
                      Command="{Binding SetFisTuruForSelectedFisWithPromptCommand}"
                      CommandParameter="Normal"/>

                        <MenuItem Header="Açılış"
                      Command="{Binding SetFisTuruForSelectedFisWithPromptCommand}"
                      CommandParameter="Açılış"/>

                        <MenuItem Header="Kapanış"
                      Command="{Binding SetFisTuruForSelectedFisWithPromptCommand}"
                      CommandParameter="Kapanış"/>
                    </MenuItem>

                    <Separator/>

                    <!-- ✅ Geri Al: gerçek anlamda son değişikliği geri alır -->
                    <MenuItem Header="↩ Son Değişikliği Geri Al"
                  Command="{Binding UndoLastFisTuruChangeCommand}"
                  IsEnabled="{Binding CanUndoFisTuruChange}"/>

                    <Separator/>

                    <MenuItem Header="Değişiklikleri Kaydet"
                  Command="{Binding SaveFisTuruOverridesToDbCommand}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>


            <DataGrid.Resources>
                <Style x:Key="RightAlign" TargetType="TextBlock">
                    <Setter Property="TextAlignment" Value="Right"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Kayıt No"
                                    Binding="{Binding EntryCounter}"
                                    Width="70"/>

                <DataGridTextColumn Header="Kebir"
                                    Binding="{Binding Kebir}"
                                    SortMemberPath="Kebir"
                                    Width="60"/>

                <DataGridTextColumn Header="Hesap Kodu"
                                    Binding="{Binding HesapKodu}"
                                    SortMemberPath="HesapKodu"
                                    Width="160"/>

                <DataGridTextColumn Header="Hesap Adı"
                                    Binding="{Binding HesapAdi}"
                                    SortMemberPath="HesapAdi"
                                    Width="220"/>

                <DataGridTextColumn Header="Fiş Tarihi"
                                    Binding="{Binding PostingDate, StringFormat=\{0:dd.MM.yyyy\}}"
                                    SortMemberPath="PostingDate"
                                    Width="110"/>

                <DataGridTextColumn Header="Fiş Numarası"
                                    Binding="{Binding EntryNumber}"
                                    SortMemberPath="EntryNumber"
                                    Width="110"/>

                <DataGridTextColumn Header="Fiş Türü"
                                    Binding="{Binding FisTuru}"
                                    Width="100"/>

                <DataGridTextColumn Header="Açıklama"
                                    Binding="{Binding Aciklama}"
                                    SortMemberPath="Aciklama"
                                    Width="*"/>

                <DataGridTextColumn Header="Borç"
                                    Binding="{Binding Borc, StringFormat={}{0:N2}}"
                                    CellStyle="{StaticResource RightCell}"
                                    Width="110"/>

                <DataGridTextColumn Header="Alacak"
                                    Binding="{Binding Alacak, StringFormat={}{0:N2}}"
                                    CellStyle="{StaticResource RightCell}"
                                    Width="110"/>

                <DataGridTextColumn Header="Tutar"
                                    Binding="{Binding Tutar, StringFormat={}{0:N2}}"
                                    CellStyle="{StaticResource RightCell}"
                                    Width="110"/>

                <DataGridTextColumn Header="Bakiye"
                                    Binding="{Binding RunningBalance, StringFormat={}{0:N2}}"
                                    CellStyle="{StaticResource RightCell}"
                                    Width="110"/>

                <DataGridTextColumn Header="Karşı Hesap"
                                    Binding="{Binding KarsiHesap}"
                                    Width="220"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
